{
  "name": "codicent",
  "displayName": "codicent",
  "description": "Codicent VSCode extension",
  "version": "1.0.1",
  "publisher": "izaxon",
  "repository": {
    "type": "github",
    "url": "https://github.com/izaxon/vscode-codicent"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codicent.send",
        "title": "Codicent: Send selected text to Codicent"
      },
      {
        "command": "codicent.configure",
        "title": "Codicent: Configure workspace project"
      },
      {
        "command": "codicent.sendToMcp",
        "title": "Codicent: Send to MCP (with response view)"
      }
    ],
    "keybindings": [
      {
        "command": "codicent.send",
        "key": "ctrl+shift+c",
        "mac": "shift+cmd+c"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "codicentMcpProvider",
        "label": "Codicent MCP"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.3"
  }
}